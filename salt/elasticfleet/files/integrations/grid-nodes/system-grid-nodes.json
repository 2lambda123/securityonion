{
  "package": {
    "name": "system",
    "version": "1.25.2"
  },
  "name": "system-grid-nodes",
  "namespace": "default",
  "policy_id": "so-grid-nodes",
  "inputs": {
    "system-logfile": {
      "enabled": true,
      "streams": {
        "system.auth": {
          "enabled": true,
          "vars": {
            "ignore_older": "72h",
            "paths": [
              "/var/log/auth.log*",
              "/var/log/secure*"
            ],
            "preserve_original_event": false,
            "tags": [
              "system-auth"
            ]
          }
        },
        "system.syslog": {
          "enabled": true,
          "vars": {
            "paths": [
              "/var/log/messages*",
              "/var/log/syslog*"
            ],
            "tags": [],
            "ignore_older": "72h"
          }
        }
      }
    },
    "system-winlog": {
      "enabled": false
    },
    "system-system/metrics": {
      "enabled": false
    }
  }
}
