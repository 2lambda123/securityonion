output {
  if "beat-ext" in [tags] and "import" not in [tags] and "filebeat" not in [metadata][pipeline] {
    if [metadata][_id] {
      elasticsearch {
        pipeline => "beats.common" 
        hosts => "{{ GLOBALS.manager }}"
        user => "{{ ES_USER }}"
        password => "{{ ES_PASS }}"
        index => "so-beats"
        ssl => true
        ssl_certificate_verification => false
        document_id => "%{[metadata][_id]}" 
      }
      } else {
      elasticsearch {
        pipeline => "beats.common" 
        hosts => "{{ GLOBALS.manager }}"
        user => "{{ ES_USER }}"
        password => "{{ ES_PASS }}"
        index => "so-beats"
        ssl => true
        ssl_certificate_verification => false
      }
  }
 }
}
