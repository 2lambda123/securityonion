{
  "_meta": {
    "documentation": "https://www.elastic.co/guide/en/ecs/current/ecs-base.html",
    "ecs_version": "1.12.2"
  },
  "template": {
    "mappings": {
      "properties": {
        "logstash": {
          "properties": {
            "log": {
              "properties": {
                "log_event": {
                  "properties": {
                    "action": {
                      "ignore_above": 1024,
                      "type": "keyword",
                      "fields": {
                        "text": {
                          "type": "match_only_text"
                        }
                      }
                    }
                  },
                  "type": "object"
                },
                "module": {
                  "ignore_above": 1024,
                  "type": "keyword",
                  "fields": {
                    "text": {
                      "type": "match_only_text"
                    }
                  }
                },
                "pipeline_id": {
                  "ignore_above": 1024,
                  "type": "keyword",
                  "fields": {
                    "text": {
                      "type": "match_only_text"
                    }
                  }
                },
                "thread": {
                  "fields": {
                    "text": {
                      "type": "match_only_text"
                    }
                  },
                  "ignore_above": 1024,
                  "type": "keyword"
                }
              }
            },
            "slowlog": {
              "properties": {
                "event": {
                  "fields": {
                    "text": {
                      "type": "match_only_text"
                    }
                  },
                  "ignore_above": 1024,
                  "type": "keyword"
                },
                "module": {
                  "ignore_above": 1024,
                  "type": "keyword",
                  "fields": {
                    "text": {
                      "type": "match_only_text"
                    }
                  }
                },
                "plugin_name": {
                  "ignore_above": 1024,
                  "type": "keyword",
                  "fields": {
                    "text": {
                      "type": "match_only_text"
                    }
                  }
                },
                "plugin_params": {
                  "fields": {
                    "text": {
                      "type": "match_only_text"
                    }
                  },
                  "ignore_above": 1024,
                  "type": "keyword"
                },
                "plugin_params_object": {
                  "type": "object"
                },
                "plugin_type": {
                  "ignore_above": 1024,
                  "type": "keyword",
                  "fields": {
                    "text": {
                      "type": "match_only_text"
                    }
                  }
                },
                "thread": {
                  "fields": {
                    "text": {
                      "type": "match_only_text"
                    }
                  },
                  "ignore_above": 1024,
                  "type": "keyword"
                },
                "took_in_millis": {
                  "type": "long"
                }
              }
            }
          }
        }
      }
    }
  }
}
