{
  "_meta": {
    "documentation": "https://www.elastic.co/guide/en/ecs/current/ecs-user.html",
    "ecs_version": "1.12.2"
  },
  "template": {
    "mappings": {
      "properties": {
        "user": {
          "properties": {
            "name": {
              "fields": {
                "security": {
                  "type": "text",
		  "analyzer": "es_security_analyzer"
                },
                "keyword": {
                  "type": "keyword"
                }
              },
              "ignore_above": 1024,
              "type": "keyword"
            }
          }
        }
      }
    }
  }
}
