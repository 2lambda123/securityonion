{
  "_meta": {
    "documentation": "https://www.elastic.co/guide/en/ecs/current/ecs-process.html",
    "ecs_version": "1.12.2"
  },
  "template": {
    "mappings": {
      "properties": {
        "process": {
          "properties": {
            "command_line": {
              "fields": {
                "security": {
                  "type": "text",
		  "analyzer": "es_security_analyzer"
                },
                "keyword": {
                  "type": "keyword"
                }
              },
              "type": "wildcard"
            }
          }
        }
      }
    }
  }
}
